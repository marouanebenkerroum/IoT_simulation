# Doxyfile configuration for the IoT Network Simulation Engine

# ---------------------------------------------------------------------------
# Project related configuration options
# ---------------------------------------------------------------------------
PROJECT_NAME           = "Scalable IoT Network Simulation Engine"
PROJECT_BRIEF          = "Design and Implementation by Marouane BENKERROUM"
OUTPUT_DIRECTORY       = doxygen_docs
CREATE_SUBDIRS         = YES
OUTPUT_LANGUAGE        = English
TAB_SIZE               = 4
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO  # Set to NO for cleaner, high-level diagrams
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = NO
HIDE_UNDOC_MEMBERS     = YES
HIDE_UNDOC_CLASSES     = YES

# ---------------------------------------------------------------------------
# Input files configuration
# ---------------------------------------------------------------------------
INPUT                  = ./include \
                         ./src
RECURSIVE              = YES
EXCLUDE                = ./build \
                         ./test \
                         ./tests \
                         ./doxygen_docs
EXCLUDE_PATTERNS       = */build/* \
                         */test/* \
                         */tests/*

# ---------------------------------------------------------------------------
# Configuration options related to the dot tool (Graphviz)
# ---------------------------------------------------------------------------
# This is the most important section for UML diagrams.
# You must have Graphviz installed: sudo apt-get install graphviz

HAVE_DOT               = YES
DOT_GRAPH_MAX_NODES    = 200
MAX_DOT_GRAPH_DEPTH    = 0
CLASS_DIAGRAMS         = YES
UML_LOOK               = YES  # This makes the diagrams look more like UML
UML_LIMIT_NUM_FIELDS   = 20
TEMPLATE_RELATIONS     = YES
CALL_GRAPH             = YES
CALLER_GRAPH           = YES
DOT_CLEANUP            = YES
DOT_IMAGE_FORMAT       = svg  # Use SVG for scalable vector graphics in HTML
GENERATE_LATEX         = NO   # We only want HTML for quick viewing